<p style="color: green"><%= notice %></p>

<% content_for :title, "Lists" %>

<h1>Lists</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>To-do Item</th>
      <th>Completed</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lists.each do |list| %>
    <tr>
      <td> <%= list.description %> </td>
      <td> <%= list.completed %> </td>
      <td> <%= link_to 'Show', list %> </td>
      <td> <%= link_to 'Edit', edit_list_path(list) %> </td>
      <td> <%= link_to 'Destroy', list, method: :delete %> </td>
    </tr>
    <% end %>
  </tbody>
</table>



<br>
<%= link_to "Add To-do Item", new_list_path, class: 'btn btn-secondary' %>
